{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "../modules/*/functions/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "../frontend/*",
    "../frontend/**/*",
    "../modules/*/frontend/**/*",
    "../modules/*/frontend/*"
  ]
}
