{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "..",
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "src/**/*",
    "../shared/**/*",
    "../modules/*/functions/**/*",
    "../modules/*/shared/**/*",
    "../modules/*/backend.ts"
  ],
  "exclude": [
    "node_modules",
    "../frontend",
    "../modules/*/frontend"
  ]
}